<ContentDialog
    x:Class="WashMachine.Controls.QrCodeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WashMachine.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="扫描耗材二维码">

    <StackPanel Width="400">
        <TextBox  Width="170"  x:Name="txtQr" Opacity="0" KeyDown="TxtQr_OnKeyDown"></TextBox>
        <ProgressBar IsIndeterminate="True" ></ProgressBar>
        <TextBlock x:Name="txtRet"></TextBlock>
        <Button HorizontalAlignment="Right" Width="140" Background="Orange" Foreground="White" Content="关闭" IsTabStop="False" Click="ButtonBase_OnClick"></Button>
    </StackPanel>
</ContentDialog>
